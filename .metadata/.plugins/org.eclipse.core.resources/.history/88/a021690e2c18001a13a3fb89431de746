#include <iostream>
#include "Stack.h"
using namespace std;
Stack::Stack(int size):SIZE(size) {
	// TODO Auto-generated constructor stub
	count=0;
	array=new int[size];
	for(int i=0;i<size;i++)
	{
		array[i]=0;
	}
}

bool Stack::isEmpty()
{
	return count==0;
}
bool Stack::isFull()
{
	return count==SIZE;
}
void Stack::Push(int data)
{
	if(isFull())
	{
		cout<<"Stack FULL"<<endl;
	}
	else
	{
		array[count++]=data;
	}
}
int Stack::Pop()
{
	if(isEmpty())
	{
		cout<<"Stack EMPTY"<<endl;
	}
	else
	{
		return array[--count];
	}
}
void Stack::PrintStack()
{
	cout<<"Stack count"<<count<<endl;
	for(int i=0;i<count;i++)
	{
		cout<<array[i]<<" ";
	}
	cout<<endl;
}

Stack::~Stack()
{
	cout<<"Memory freed"<<endl;
	delete []array;

}
